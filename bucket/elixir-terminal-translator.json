{
    "version": "0.1.1",
    "description": "A Command Line Interface translator",
    "homepage": "https://github.com/Maupse/elixir_terminal_translator",
    "license": "MIT",
    "depends": [
        "erlang",
        "elixir"
    ],
    "url": "https://github.com/Maupse/elixir_terminal_translator/releases/download/v0.1.1/tl",
    "installer": {
        "script": ""
    },
    "post_install": [
        "echo Use tl --help to get an overview.",
        "echo Add \"$env:USERPROFILE/scoop/apps/elixir-terminal-translator/tl\" to your PATH manually if your shell can't find tl."
    ],
    "env_add_path": [
        "$env:USERPROFILE\\scoop\\apps\\elixir-terminal-translator"
    ],
    "checkver": {
        "url": "https://github.com/Maupse/elixir_terminal_translator/releases",
        "regex": "tag/v(\\d.]+)"
    },
    "autoupdate": {
        "url": "https://github.com/Maupse/elixir_terminal_translator/releases/download/v$version/tl"
    }
}
